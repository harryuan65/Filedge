<div id="flash">
  <% if notice %>
    <p class="min-h-[40px] bg-green-50 text-emerald-600 px-3 py-2 font-medium rounded-lg mt-3 text-center">
      <%= notice %>
    </p>
  <% end %>
  <% if alert %>
    <p class="min-h-[40px] bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3 text-center">
      <%= alert %>
    </p>
  <% end %>
</div>
