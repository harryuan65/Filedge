<div class="sign-in-form mx-auto my-auto w-80 flex flex-col items-center">
  <h2 class="text-4xl font-bold">Filedge</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="field mt-4">
      <%= f.email_field :email, autofocus: true, placeholder:"user@email.com", autocomplete: "email", class: "w-full h-11 border border-border" %>
    </div>
    <div class="field  mt-4">
      <%= f.password_field :password, placeholder: "password", autocomplete: "new-password", class: "w-full h-11 border border-border" %>
      <% if @minimum_password_length %>
        <span>(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
    </div>
    <div class="field mt-4">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full h-11 border border-border" %>
    </div>
    <div class="actions">
      <%= f.submit "SIGN UP", class: "cursor-pointer hover:opacity-80 mt-4 w-full h-11 text-white bg-accent block" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
